<form class="login-form">
    <div class="input-field">
        <input id="username-login" type="text" class="validate" placeholder="Username">

    </div>
    <div class="input-field">
        <input id="password-login" type="password" class="validate" placeholder="Password">
    </div>
    <div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
    </div>

</form>

<form class="signup-form">
    <div class="input-field">
        <input type="text" class="validate" placeholder="Username" id="username-signup" />
    </div>
    <div class="input-field">
        <input type="text" class="validate" placeholder="Email" id="email-signup" />
    </div>
    <div class="input-field">
        <input type="password" class="validate" placeholder="Password" id="password-signup" />
    </div>
    <div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Signup</button>
    </div>
</form>

<script src="/javascript/login.js"></script>